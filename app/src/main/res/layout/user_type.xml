<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_background"
    tools:context=".Activities.SelectUserTypeActivity">


    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="247dp"
        android:layout_height="88dp"
        android:fontFamily="@font/sf_semibold"
        android:text="Welcome!"
        android:textAlignment="center"
        android:textSize="51sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />


    <Button
        android:id="@+id/service_provider"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:background="@drawable/button_ui"
        android:fontFamily="@font/sf_bold"
        android:text="@string/serviceProvider"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_seeker"
        app:layout_constraintVertical_bias="0.391" />

    <Button
        android:id="@+id/service_seeker"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:background="@drawable/button_ui"
        android:fontFamily="@font/sf_bold"
        android:text="@string/serviceSeeker"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcom_description"
        app:layout_constraintVertical_bias="0.678" />

    <TextView
        android:id="@+id/tv_welcom_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_light"
        android:gravity="center"
        android:text="Please select from option below"
        android:textAlignment="center"
        android:textColorLink="#66BB6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />
</androidx.constraintlayout.widget.ConstraintLayout>